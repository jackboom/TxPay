<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_view"
    android:padding="8dp" >
    <ListView
        android:id="@+id/lv_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/txt_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_padding45"
            android:layout_marginTop="@dimen/view_padding8"
            android:background="@drawable/actionsheet_single_selector"
            android:text="日期选择"
            android:textColor="@color/white"
            android:textSize="@dimen/view_padding15"
            android:textStyle="bold" />
        <TextView
            android:layout_weight="0"
            android:textColor="@color/viewfinder_mask"
            android:layout_width="@dimen/view_padding1"
            android:layout_height="match_parent"
            />
        <TextView

            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/txt_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_padding45"
            android:layout_marginTop="@dimen/view_padding8"
            android:background="@drawable/actionsheet_single_selector"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/view_padding15"
            />

    </LinearLayout>

</LinearLayout>