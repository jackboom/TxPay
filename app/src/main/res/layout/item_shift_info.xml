<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light"
    android:gravity="center"
    style="@style/shift_layout"
    android:orientation="vertical">

    <RelativeLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/view_padding10"
        android:paddingLeft="@dimen/view_padding20"
        android:layout_height="@dimen/view_padding40"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:padding="@dimen/view_padding10">

        <TextView
            style="@style/shift_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交班人" />

        <TextView
            android:id="@+id/tv_shift_username"
            style="@style/shift_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1232121521" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/white"
        android:paddingLeft="@dimen/view_padding20"
        android:layout_height="@dimen/view_padding40"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/view_padding1"
        android:padding="@dimen/view_padding10">

        <TextView
            style="@style/shift_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间" />

        <TextView
            android:id="@+id/tv_shift_start"
            style="@style/shift_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1232121521" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/white"
        android:paddingLeft="@dimen/view_padding20"
        android:layout_height="@dimen/view_padding40"
        android:layout_marginTop="@dimen/view_padding1"
        android:layout_width="match_parent"
        android:padding="@dimen/view_padding10">

        <TextView
            style="@style/shift_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间" />

        <TextView
            android:id="@+id/tv_shift_end"
            style="@style/shift_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1232121521" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/white"
        android:paddingLeft="@dimen/view_padding20"
        android:layout_height="@dimen/view_padding40"
        android:layout_marginTop="@dimen/view_padding1"
        android:layout_width="match_parent"
        android:padding="@dimen/view_padding10">

        <TextView
            style="@style/shift_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款" />

        <TextView
            android:id="@+id/tv_shift_receive"
            style="@style/shift_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1232121521" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="@dimen/view_padding20"
        android:layout_height="@dimen/view_padding40"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/view_padding1"
        android:padding="@dimen/view_padding10">

        <TextView
            style="@style/shift_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款" />

        <TextView
            android:id="@+id/tv_shift_refund"
            style="@style/shift_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1232121521" />
    </RelativeLayout>


</LinearLayout>