<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_icon_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context=".activity.LoginActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!--公司logo-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/view_padding90">

            <ImageView
                android:id="@+id/icon_logo"
                android:layout_width="@dimen/view_padding197"
                android:layout_height="@dimen/view_padding55"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:src="@drawable/login_icon_logo"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/half_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_padding50"
                android:layout_marginRight="@dimen/view_padding50"
                android:layout_marginTop="@dimen/view_padding80"
                android:orientation="vertical">
                <!-- 用户名 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/login_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/view_padding10"
                        android:src="@drawable/login_icon_acount"/>

                    <EditText
                        android:id="@+id/edt_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/view_padding25"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="账户"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/text_login_register"
                        android:textColorHint="@color/text_login_register"
                        android:textSize="@dimen/view_padding18"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8px"
                    android:background="@color/text_login_register"/>
                <!-- 密码 text -->

                <LinearLayout
                    android:id="@+id/login_password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="53px"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/login_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/login_icon_password"
                        />


                    <EditText
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/view_padding25"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="密码"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/text_login_register"
                        android:textColorHint="@color/text_login_register"
                        android:textSize="@dimen/view_padding18"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/view_padding5"
                    android:background="@color/text_login_register"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding18"
                    >

                    <ImageView
                        android:id="@+id/iv_login_remember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:clickable="true"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:src="@drawable/iconfont_kuang"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/view_padding5"
                        android:layout_toRightOf="@id/iv_login_remember"
                        android:gravity="center"
                        android:text="记住密码"
                        android:textColor="#cccccc"
                        android:textSize="@dimen/view_padding20"/>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_forget_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/view_padding10"
                        android:clickable="true"
                        android:text="忘记密码?"
                        android:textColor="#cccccc"
                        android:textSize="@dimen/view_padding20"
                        />
                </RelativeLayout>
                <!-- 登录button -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding35"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/iv_login_submit"
                        android:layout_width="@dimen/view_padding260"
                        android:layout_height="@dimen/view_padding45"
                        android:src="@drawable/selector_login_submit"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/view_padding40"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="没有账号？"
                    android:textColor="@color/text_login_bottom"
                    android:textSize="@dimen/view_padding15"/>

                <ImageView
                    android:id="@+id/iv_login_join"
                    android:layout_width="@dimen/view_padding155"
                    android:layout_height="@dimen/view_padding35"
                    android:layout_marginTop="@dimen/view_padding25"
                    android:src="@drawable/login_icon_jm"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
