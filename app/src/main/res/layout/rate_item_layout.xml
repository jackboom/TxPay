<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_padding150"
    android:background="@color/white_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_padding20"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/statusBar"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rate_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="1"
                android:gravity="center"
                android:singleLine="false"
                android:textColor="@color/white"
                android:textSize="@dimen/view_padding18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/billdetail_layout_1"
                android:paddingBottom="@dimen/view_padding10"
                android:paddingRight="@dimen/view_padding10"
                android:paddingTop="@dimen/view_padding10">

                <TextView
                    style="@style/myself_text1"
                    android:layout_centerVertical="true"
                    android:text="折扣类型" />

                <TextView
                    android:id="@+id/tv_rate_discountType"
                    style="@style/myself_text1"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="折扣率" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/billdetail_layout_1"
                android:paddingBottom="@dimen/view_padding10"
                android:paddingRight="@dimen/view_padding10"
                android:paddingTop="@dimen/view_padding10">

                <TextView
                    style="@style/myself_text1"
                    android:layout_centerVertical="true"
                    android:text="交易费率" />

                <TextView
                    android:id="@+id/tv_rate_dealRate"
                    style="@style/myself_text1"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0.6" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/billdetail_layout_1"
                android:paddingBottom="@dimen/view_padding10"
                android:paddingRight="@dimen/view_padding10"
                android:paddingTop="@dimen/view_padding10">

                <TextView
                    android:id="@+id/tv_period"
                    style="@style/myself_text1"
                    android:layout_centerVertical="true"
                    android:text="结算周期" />

                <ImageView
                    android:id="@+id/iv_rate"
                    android:layout_width="@dimen/view_padding20"
                    android:layout_height="@dimen/view_padding20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/rate_icon_see" />

                <TextView
                    android:id="@+id/tv_rate_period"
                    style="@style/myself_text1"
                    android:layout_toLeftOf="@id/iv_rate"
                    android:text="周结" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
