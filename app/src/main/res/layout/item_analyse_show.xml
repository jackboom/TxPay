<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_shadow"
        android:layout_width="658px"
        android:layout_height="466px"
        android:background="@drawable/wheel_bg"
        android:orientation="vertical">

        <include
            android:id="@+id/include2"
            layout="@layout/item_week_analyse"></include>

        <RelativeLayout
            android:id="@+id/rl_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80px"></RelativeLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100px"
            android:background="@null"></com.github.mikephil.charting.charts.LineChart>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68px"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.08"
                android:background="@color/statusBar_bg" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="9px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/linechart_shadow" />
    </RelativeLayout>

</LinearLayout>