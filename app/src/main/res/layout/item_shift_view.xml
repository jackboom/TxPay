<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:layout_marginTop="@dimen/view_padding15"
    android:id="@+id/ll_shift_container"
    android:orientation="vertical">
    <!--<LinearLayout-->
        <!--android:background="@color/shift_bg"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/view_padding20">-->
    <!--</LinearLayout>-->
    <LinearLayout
        android:background="@drawable/shape_item_shift_bg"
        android:layout_height="@dimen/view_padding64"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        >
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="@dimen/view_padding50"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/view_padding8">

        <TextView
            android:id="@+id/tv_item_shift_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textSize="@dimen/view_padding15" />

        <TextView
            android:layout_marginTop="@dimen/view_padding5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班次" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/view_padding1"
            android:layout_height="@dimen/view_padding30"
            android:layout_weight="0"
            android:background="@color/viewfinder_mask" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/view_padding220"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/view_padding8">


        <RelativeLayout
            android:paddingLeft="@dimen/view_padding15"
            android:id="@+id/rl_shift_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始"
                android:textSize="@dimen/view_padding15" />

            <ImageView
                android:layout_width="@dimen/view_padding45"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_shift_point_to" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="结束"
                android:textSize="@dimen/view_padding15" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/view_padding5"
            android:id="@+id/rl_shift_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/view_padding15">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_shift_1"
                    android:layout_width="@dimen/view_padding12.5"
                    android:layout_height="@dimen/view_padding12.5"
                    android:src="@drawable/icon_shift_start" />

                <TextView
                    android:id="@+id/tv_shift_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/view_padding5"
                    android:layout_toRightOf="@id/iv_shift_1"
                    android:text="12-12 13:21"
                    android:textSize="@dimen/view_padding12.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/view_padding5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_shift_2"
                    android:layout_width="@dimen/view_padding12.5"
                    android:layout_height="@dimen/view_padding12.5"
                    android:layout_toRightOf="@id/tv_shift_start"
                    android:src="@drawable/icon_shift_end" />

                <TextView
                    android:id="@+id/tv_shift_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/view_padding5"
                    android:layout_toRightOf="@id/iv_shift_2"
                    android:text="12-12 13:21"
                    android:textSize="@dimen/view_padding12.5" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_padding64"
            android:orientation="vertical"
            android:padding="@dimen/view_padding8">
            <RelativeLayout
                android:paddingBottom="@dimen/view_padding8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tv_mark"
                    android:textSize="@dimen/view_padding15"
                    android:text="¥"
                    android:layout_width="@dimen/view_padding10"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@id/tv_mark"
                    android:id="@+id/tv_shift_amount_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12324464"
                    android:textSize="@dimen/view_padding15" />

                <ImageView
                    android:layout_below="@id/tv_mark"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/view_padding10"
                    android:id="@+id/iv_item_shift_arrow"
                    android:layout_width="@dimen/view_padding12.5"
                    android:layout_height="@dimen/view_padding8"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_shift_arrow" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>