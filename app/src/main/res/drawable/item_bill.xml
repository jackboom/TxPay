<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item android:state_pressed="false"><shape>
            <solid android:color="@color/white" />  <!-- 设置主体背景颜色 -->
            <stroke android:width="0.01px" android:color="@color/btn_bordor_line"/>   <!-- 设置边框宽度和颜色 -->
        </shape></item>
    <!-- 按下去主体背景颜色值 -->
    <item android:state_pressed="true"><shape>
            <solid android:color="@color/bg_btn_press" />
        </shape></item>

</selector>