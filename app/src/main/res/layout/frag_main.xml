                android:layout_height="match_parent"/>
            <ImageView

                android:id="@+id/iv_home_alipay"
                style="@style/layout_calculator"
                android:clickable="true"
                android:src="@drawable/selector_home_alipay"
                />

        </LinearLayout>
        <TextView
            android:background="@color/text_scan_amount"
            android:layout_width="match_parent"
            android:layout_height="2px"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_weight="1"
                android:id="@+id/iv_home_yzf"
                style="@style/layout_calculator"
                android:clickable="true"
                android:src="@drawable/selector_home_yzf"
                />
            <TextView
                android:background="@color/text_scan_amount"
                android:layout_width="2px"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_weight="1"
                android:id="@+id/iv_home_baidu"
                style="@style/layout_calculator"
                android:clickable="true"
                android:src="@drawable/selector_home_baidu"/>
        </LinearLayout>
