<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_qrcode_bg"
    android:fitsSystemWindows="true"
    android:background="@drawable/qrcode_wechat_bg"
    tools:context=".activity.QrCodeProductActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_padding45">
        <ImageView
            android:src="@drawable/pay_icon_back"
            android:id="@+id/iv_pay_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/view_padding5"
            android:text="@string/text_scan_title"
            android:textColor="@color/text_scan_amount"
            android:textSize="@dimen/view_padding25"
            />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_qrcode_bg"
        android:layout_marginTop="52px"
        android:layout_width="646px"
        android:layout_height="840px">
        <LinearLayout
            android:id="@+id/qrshow_bg"
            android:gravity="center"
            android:background="@color/qrcode_text_bg_alipay"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_padding80">
            <com.jszf.txsystem.view.CustomTextView
                android:textSize="@dimen/view_padding36"
                android:textColor="@color/qrcode_text_amount_alipay"
                android:id="@+id/tv_qrcode_amount"
                android:text="¥ 2.55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <com.jszf.txsystem.view.CustomTextView
            android:layout_marginBottom="@dimen/view_padding70"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_qrshow"
            android:gravity="center"
            android:textSize="@dimen/view_padding18"
            android:text="请向顾客展示你的二维码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_below="@id/qrshow_bg"
            android:layout_above="@id/tv_qrshow"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_icon_qrcode"
                android:layout_width="400px"
                android:layout_height="400px"/>
        </LinearLayout>



    </RelativeLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_padding35"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_qrcode_cancle"
            android:scaleType="centerCrop"
            android:src="@drawable/qrcode_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
